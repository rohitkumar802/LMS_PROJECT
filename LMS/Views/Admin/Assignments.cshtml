@using System.Data

@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

@{
    ViewBag.Title = "Assignments";
    DataTable dt = (DataTable)ViewData["data"];
    DataTable sub = (DataTable)ViewData["Subjects"];
    DataTable fac = (DataTable)ViewData["Faculties"];

    bool isNext = ViewBag.isNextID;
    int nextID = ViewBag.nextID;

    string evalStatus = ViewBag.evalStatus;
}


<h2>Assignments</h2>

<div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Assignments</h4>
            <div id="accordion00" class="according accordion-s3 gradiant-bg">
                @for (int i = 0; i < dt.Rows.Count; i++)
                {
                    string classes = "card-link";
                    string classes2 = "collapse";
                    if (i == 1)
                    {
                        classes2 += " show";
                    }
                    else
                    {
                        classes += " collapsed";
                    }
                    string id = "accordion" + dt.Rows[i][0];
                    string exp = "Id = " + dt.Rows[i][4];
                    DataRow[] r = sub.Select(exp);
                    int _i = sub.Rows.IndexOf(r[0]);

                    string exp2 = "facultyID = " + dt.Rows[i][6];
                    DataRow[] r2 = fac.Select(exp2);
                    int _i2 = fac.Rows.IndexOf(r2[0]);

                    <div class="card">
                        <div class="card-header">
                            <a class="@classes right" data-toggle="collapse" href="#@id">
                                @dt.Rows[i][1] (@sub.Rows[_i][1])
                            </a>
                        </div>
                        <div id="@id" class="@classes2" data-parent="#accordion00">
                            <div id="dataTablee" class="card-body">
                                <div class="alert alert-primary">
                                    <a class="alert-link" href="@Url.Action("Download", "Student", new { filename = "GautamYadav", path = dt.Rows[i][3] })"><u>This</u></a>
                                    assignment was uploaded by <strong>@fac.Rows[_i2][1]</strong> on <strong>@dt.Rows[i][5]</strong> last date to submit is <b>@dt.Rows[i][7]</b>
                                </div>
                                @{
                                    Html.RenderAction("ShowAssignment", "Admin", new { docID = dt.Rows[i][0] });
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- accordion style 4 end -->


<div class="modal fade" id="modal-xl2">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Evaluate Assignment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @{
                if (isNext == true)
                {
                    Html.RenderAction("Evaluate", "Admin", new { assignmentID = nextID });
                }
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section Scripts{
    <script>

        alert('@evalStatus')

        if ('@isNext' == 'True' || '@isNext' == 'true') {
            $("#modal-xl2").modal()
        }
    </script>

}